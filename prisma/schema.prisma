generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

enum Categories {
  BALCAO
  ARMARIO 
  ACESSORIO
  PANELEIRO
}

model Collection {
  id String @id @default(dbgenerated("nanoid()"))
  name String
  colors String[]
  color_names String[]
  furnitures Furniture[]
  created_at DateTime @default(now())
  updated_at DateTime? 
  active Boolean @default(true)
  order Int @default(0)
  @@map("collections")
}



model Furniture {
    id String @id @default(dbgenerated("nanoid()"))
    nome String
    local String
    colocarCima Boolean
    colocarDireita Boolean
    colocarEsquerda Boolean
    tipo String
    tamanhox Int
    tamanhoy Int
    cor String[]
    botao Boolean
    category Categories
    nomeMovel String
    img String
    collection_id String
    collection Collection @relation(fields: [collection_id], references: [id], onDelete: Cascade)
    created_at DateTime @default(now())
    updated_at DateTime?
    active Boolean @default(true)
    canto Boolean @default(false)
    order Float @default(0)
    @@map("furnitures")
}